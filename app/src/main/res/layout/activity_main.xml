<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".VendingMachineActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_coca_cola_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="16dp"
        android:text="C.COLA"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_fanta_name"
        app:layout_constraintTop_toTopOf="@id/tv_coca_cola_name"
        app:layout_constraintRight_toLeftOf="@id/tv_coca_cola_name"
        android:textSize="30sp"
        android:text="FANTA"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sprite_name"
        app:layout_constraintTop_toTopOf="@id/tv_coca_cola_name"
        app:layout_constraintLeft_toRightOf="@id/tv_coca_cola_name"
        android:textSize="30sp"
        android:text="SPRITE"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_fanta_value"
        app:layout_constraintLeft_toLeftOf="@id/tv_fanta_name"
        app:layout_constraintRight_toRightOf="@id/tv_fanta_name"
        app:layout_constraintTop_toBottomOf="@id/tv_fanta_name"
        android:layout_marginVertical="16dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:text="0"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_coca_col_value"
        app:layout_constraintLeft_toLeftOf="@id/tv_coca_cola_name"
        app:layout_constraintRight_toRightOf="@id/tv_coca_cola_name"
        app:layout_constraintTop_toBottomOf="@id/tv_coca_cola_name"
        android:layout_marginVertical="16dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:text="0"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sprite_value"
        app:layout_constraintLeft_toLeftOf="@id/tv_sprite_name"
        app:layout_constraintRight_toRightOf="@id/tv_sprite_name"
        app:layout_constraintTop_toBottomOf="@id/tv_sprite_name"
        android:layout_marginVertical="16dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:text="0"/>

    <Button
        android:id="@+id/btn_reduce_fanta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_fanta_name"
        app:layout_constraintRight_toRightOf="@id/tv_fanta_name"
        app:layout_constraintTop_toBottomOf="@id/tv_fanta_value"
        android:layout_marginVertical="16dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Buy"/>

    <Button
        android:id="@+id/btn_reduce_cola"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_coca_cola_name"
        app:layout_constraintRight_toRightOf="@id/tv_coca_cola_name"
        app:layout_constraintTop_toBottomOf="@id/tv_coca_col_value"
        android:layout_marginVertical="16dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Buy"/>

    <Button
        android:id="@+id/btn_reduce_sprite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_sprite_name"
        app:layout_constraintRight_toRightOf="@id/tv_sprite_name"
        app:layout_constraintTop_toBottomOf="@id/tv_sprite_value"
        android:layout_marginVertical="16dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Buy"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_refill"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:text="REFILL"
        android:textSize="40sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_refill"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        android:textSize="20sp"
        android:text="Register"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_unregister"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_refill"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        android:textSize="20sp"
        android:text="Unregister"/>

</android.support.constraint.ConstraintLayout>